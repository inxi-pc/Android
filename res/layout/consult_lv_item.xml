<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
    
    <TextView 
        android:id="@+id/tv_consult_lv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/consult_time_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    
    <LinearLayout 
        android:id="@+id/ll_consult_lv_item_system_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/consult_system_avatar" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp">
            
            <TextView 
                android:id="@+id/tv_consult_lv_item_system_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/consult_system_message_bg"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:textColor="@color/text_color" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_consult_lv_item_customer_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="15dp">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:gravity="right">
        
	        <TextView 
	            android:id="@+id/tv_consult_lv_item_customer_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/consult_user_message_bg"
	            android:paddingRight="15dp"
	            android:paddingTop="8dp"
	            android:paddingBottom="8dp"
	            android:paddingLeft="10dp"
	            android:textColor="@android:color/white"
	            android:textSize="15sp" />
        
        </LinearLayout>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/consult_user_avatar" />
        
    </LinearLayout>

</LinearLayout>
