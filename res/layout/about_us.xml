<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >
    
    <include layout="@layout/title_layout" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="30dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/text_color2"
            android:text="微装修  V3.1" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:text="联系我们：" />
        
        <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coner_bg"
                 android:layout_marginTop="10dip" android:orientation="vertical">
        
        	<RelativeLayout android:id="@+id/updateLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coner_top_round_selector"
                android:minHeight="45dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:onClick="onCallPhone">
                
                <ImageView android:id="@+id/tel" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/tel" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-8617-000"
                    android:textColor="@color/black"
                    android:textSize="14sp" 
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/tel" android:paddingLeft="10dp"/>
                
            </RelativeLayout>
            
        	<View android:layout_width="fill_parent"
                    android:layout_height="1px" android:background="@color/coner_color"/>
            
        	<RelativeLayout android:id="@+id/updateLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coner_middle_selector"
                android:minHeight="45dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:onClick="onCallEmail">
                
                <ImageView android:id="@+id/email" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/email" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="app@citytogo.com.cn"
                    android:textColor="@color/black"
                    android:textSize="14sp" 
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/email" android:paddingLeft="10dp"/>
                
            </RelativeLayout>
            
        	<View android:layout_width="fill_parent"
                    android:layout_height="1px" android:background="@color/coner_color"/>
            
            <!-- sina -->
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coner_middle_selector"
                android:minHeight="45dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">
                
                <ImageView android:id="@+id/sina" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/sina" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vzhuangxiu"
                    android:textColor="@color/black"
                    android:textSize="14sp" 
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/sina" android:paddingLeft="10dp"/>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dip"
                    android:src="@drawable/arrow" android:visibility="invisible"/>
            </RelativeLayout>
            
            <View android:layout_width="fill_parent"
                    android:layout_height="1px" android:background="@color/coner_color"/>
            
            <!-- QQ -->
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coner_bottom_round_selector"
                android:minHeight="45dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <ImageView android:id="@+id/qq" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/qq" 
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4006868911"
                    android:textColor="@color/black"
                    android:textSize="14sp" 
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/qq" android:paddingLeft="10dp"/>
                
            </RelativeLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
